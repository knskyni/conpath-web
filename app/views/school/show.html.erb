                  <a href="#" class="text-dark-75 text-hover-primary mb-1 font-size-lg font-weight-bolder">学生</a>
                  <span class="text-muted font-weight-bold">Students</span>
                </div>
                <span class="font-weight-bolder label label-xl label-light-primary label-inline py-5 min-w-45px"><%= @school.count_student %></span>
              </div>
            </div>
          </div>
          <div class="d-flex flex-center" id="kt_sticky_toolbar_chat_toggler_2" data-toggle="tooltip" title="" data-placement="right" data-original-title="Chat Example">
            <%= link_to("編集", "/school/#{@school.id}/edit", {class: ["btn", "btn-primary", "font-weight-bolder", "font-size-sm", "py-3", "px-14"]}) %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xl-9">
    <% @courses.each_slice(3) do |courses_sliced| %>
      <div class="row">
        <% courses_sliced.each do |course| %>
          <div class="col-xl-4 col-lg-6 col-md-6 col-sm-6">
            <div class="card card-custom gutter-b card-stretch">
              <div class="card-body pt-4">
                <div class="d-flex align-items-end my-7">
                  <div class="d-flex align-items-center">
                    <div class="d-flex flex-column">
                      <a href="#" class="text-dark font-weight-bold text-hover-primary font-size-h4 mb-0"><%= course.name %></a>
                    </div>
                  </div>
                </div>
                <div class="mb-7">
                  <div class="d-flex justify-content-between align-items-center">
                    <span class="text-dark-75 font-weight-bolder mr-2">年次:</span>
                    <span class="text-muted text-hover-primary"><%= course.number_of_enrolled_year %>年次</span>
                  </div>
                  <div class="d-flex justify-content-between align-items-cente my-1">
                    <span class="text-dark-75 font-weight-bolder mr-2">学生:</span>
                    <span class="text-muted text-hover-primary"><%= course.count_student.to_s(:delimited) %>名</span>
                  </div>
                </div>
                <%= link_to("学科ページ", "/course/#{course.id}", {class: %w(btn btn-block btn-sm btn-light-success font-weight-bolder text-uppercase py-4)}) %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>