<html lang="ja" dir="ltr">
<head>
  <meta charset="utf-8">
  <title>教員情報登録 | 教員</title>
</head>
<body>
  <div class="subheader py-2 py-lg-6 subheader-solid" id="kt_subheader">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
      <div class="d-flex align-items-center flex-wrap mr-1">
        <div class="d-flex align-items-baseline flex-wrap mr-5">
          <h5 class="text-dark font-weight-bold my-1 mr-5">教員情報登録</h5>
            <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
              <li class="breadcrumb-item">
                <%= link_to("就サポ", "/") %>>
              </li>
              <li class="breadcrumb-item">
                <%= link_to("教員情報登録", "/teacher/new") %>>
              </li>
            </ul>
        </div>
      </div>
    </div>
  </div>

<div class="card card-custom">
  <div class="card-body p-0">
    <div class="wizard wizard-3" id="kt_wizard_v3" data-wizard-state="first" data-wizard-clickable="true">
      <div class="d-flex flex-column-fluid px-8 py-8 px-lg-15 py-lg-3">
        <%=form_tag('/teacher/create') do %>
          <div class="container">
            <div class="row">
              <div class="col-xl-4" name="last_name">
                <div class="form-group fv-plugins-icon-container">
                  <label>苗字<span class="text-danger">*</span></label>
                  <input type="text" class="form-control" name="width" placeholder="Last Name">
                </div>
              </div>
              <div class="col-xl-4" name="first_name">
                <div class="form-group fv-plugins-icon-container">
                  <label>名前<span class="text-danger">*</span></label>
                  <input type="text" class="form-control" name="height" placeholder="First Name">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-xl-4" name="last_name_furigana">
                <div class="form-group fv-plugins-icon-container">
                  <label>みょうじ<span class="text-danger">*</span></label>
                  <input type="text" class="form-control" name="width" placeholder="Last Name Furigana">
                </div>
              </div>
              <div class="col-xl-4" name="first_name_furigana">
                <div class="form-group fv-plugins-icon-container">
                  <label>なまえ<span class="text-danger">*</span></label>
                  <input type="text" class="form-control" name="height" placeholder="First Name Furigana">
                </div>
              </div>
            </div>
            <div class="form-group" name="email">
              <label>メールアドレス
                <span class="text-danger">*</span></label>
                <input type="email" class="form-control" placeholder="Email">
            </div>
            <div class="form-group" name="password">
              <label>パスワード
                <span class="text-danger">*</span></label>
                <input type="password" class="form-control" placeholder="Password">
            </div>
            <div class="form-group" name="gender">
              <label for="exampleSelect1">性別
                <span class="text-danger">*</span></label>
                <select class="form-control" id="exampleSelect1">
                  <option value=1>女性</option>
                  <option value=2>男性</option>
                </select>
            </div>
            <div class="form-group" name="icon">
              <label>教員アイコン
                <span class="text-danger">*</span></label>
              <input type="file" class="form-control">
            </div>
            <div class="form-group" name="biography">
              <label>自己紹介文
                <span class="text-danger">*</span></label>
                <input type="text" class="form-control" placeholder="biography">
            </div>
          </div>
          <button type="button" class="btn btn-primary font-weight-bolder text-uppercase px-9 py-4" data-wizard-type="action-next">登録</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
</body>
</html>