<div class="card card-custom">
  <div class="card-body">
    <% if @teacher.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">エラー</h4>
        <ul class="m-0">
          <% @teacher.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%=form_tag('/teacher/create') do %>
      <div class="container">
        <div class="form-row">
          <div class="form-group col-xl-6">
            <label>性<span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="last_name" value="<%= @teacher.last_name %>">
          </div>
          <div class="form-group col-xl-6">
            <label>名<span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="first_name" value="<%= @teacher.first_name %>">
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-xl-6">
            <label>せい<span class="text-danger">*</span></label>
            <input type="text"  class="form-control" name="last_name_furigana" value="<%= @teacher.last_name_furigana %>">
          </div>
          <div class="form-group col-xl-6">
            <label>めい<span class="text-danger">*</span></label>
            <input type="text" name="first_name_furigana" class="form-control" value="<%= @teacher.first_name_furigana %>">
          </div>
        </div>
        <div class="form-group">
          <label>メールアドレス<span class="text-danger">*</span></label>
          <input type="email" class="form-control" name="email" value="<%= @teacher.email %>">
        </div>
        <div class="form-group">
          <label>パスワード<span class="text-danger">*</span></label>
          <input type="password" class="form-control" name="password">
        </div>
        <div class="form-group">
          <label>パスワード確認<span class="text-danger">*</span></label>
          <input type="password" class="form-control" name="password_confirm">
        </div>
        <div class="form-group">
          <label>性別</label>
          <select class="form-control"  name="gender" id="exampleSelects">
            <option value="0">男性</option>
            <option value="1">女性</option>
            <option value="2">非公開</option>
          </select>
        </div>
        <div class="form-group">
          <label>教員アイコン</label>
          <input type="file" class="form-control" name="icon">
        </div>
        <div class="text-center">
          <input type="submit" value="登録" class="btn btn-primary font-right">
        </div>
      </div>
    <% end %>
  </div>
</div>
