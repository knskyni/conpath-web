<div class="card card-custom card-stretch gutter-b" >
  <div class="card-header border-0 mt-5">
    <h3 class="card-title align-items-start flex-column text-dark">
      <span class="font-weight-bolder text-dark">お気に入りの求人票</span>
    </h3>
  </div>
  <div class="card-body pt-2">
    <% @favorites.each do |favorite| %>
      <div class="d-flex flex-wrap align-items-center mb-10 border-bottom">
        <div class="d-flex flex-column flex-grow-1 col-3 ">
          <a href="/company/<%= favorite.company.id %>" class="text-dark-75 font-weight-bolder text-hover-primary font-size-lg"><%= favorite.company.name %></a>
          <span class="text-muted font-weight-bold font-size-sm my-1"><%= favorite.company.name_furigana %></span>
        </div>
        <div class="d-flex flex-column flex-grow-1">
          <span class="text-dark-75 font-weight-bolder text-hover-primary font-size-lg">住所: <%= favorite.company.address %></span>
        </div>
        <div class="d-flex flex-column flex-grow-1">
          <span class="text-dark-75 font-weight-bolder text-hover-primary font-size-lg">TEL: <%= favorite.company.tel_number %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>