<div class="card card-custom gutter-b">
  <div class="card-header">
    <div class="card-title">
      <h3 class="card-label">変更するアカウント情報を入力してください。</h3>
    </div>
  </div>
  <div class="card-body">
    <% if @student.errors %>
      <ul>
        <% @student.errors.full_messages.each do |message| %>
          <li><span class="form-text text-danger"><%= message %></span></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_tag("/student/my/update", {multipart: true}) do %>
      <h3 class="font-size-lg text-dark font-weight-bold mb-6">1. 個人情報:</h3>
      <div class="mb-15">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label>姓<span class="text-danger">*</span></label>
            <input type="string" class="form-control" name="last_name" value="<%= @student.last_name%>">
          </div>
          <div class="form-group col-md-6">
            <label>名<span class="text-danger">*</span></label>
            <input type="string" class="form-control" name="first_name" value="<%= @student.first_name%>">
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label>せい<span class="text-danger">*</span></label>
            <input type="string" class="form-control" name="last_name_furigana" value="<%= @student.last_name_furigana%>">
          </div>
          <div class="form-group col-md-6">
            <label>めい<span class="text-danger">*</span></label>
            <input type="string" class="form-control" name="first_name_furigana" value="<%= @student.first_name_furigana%>">
          </div>
        </div>
        <div class="form-group">
          <label>性別<span class="text-danger">*</span></label>
          <select class="form-control form-control" id="exampleSelects" name="gender">
            <option value="0">男性</option>
            <option value="1">女性</option>
            <option value="2">非公開</option>
          </select>
        </div>
      </div>

      <h3 class="font-size-lg text-dark font-weight-bold mb-6">2. アカウント設定:</h3>
      <div class="mb-15">
        <div class="form-group">
          <label>メールアドレス<span class="text-danger">*</span></label>
          <input type="string" class="form-control" name="email" value="<%= @student.email%>">
        </div>
        <div class="form-group">
          <label>アイコン<span class="text-danger">*</span></label>
          <div>
            <div class="image-input image-input-outline" id="kt_image_1">
              <div class="image-input-wrapper" style="background-image: url(<%= @student.icon %>)"></div>
              <label class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="change" data-toggle="tooltip" title="" data-original-title="Change avatar">
                <i class="fa fa-pen icon-sm text-muted"></i>
                <input type="file" name="icon" accept=".png, .jpg, .jpeg">
                <input type="hidden" name="icon_remove">
              </label>
              <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="cancel" data-toggle="tooltip" title="" data-original-title="Cancel avatar">
                <i class="ki ki-bold-close icon-xs text-muted"></i>
              </span>
            </div>
          </div>
          <span class="form-text text-muted">Allowed file types: png, jpg, jpeg.</span>
        </div>
      </div>
      <input class="btn btn-primary float-right" type="submit" value="変更">
    <% end %>
  </div>
</div>