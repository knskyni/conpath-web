<div class="card card-custom gutter-b">
  <div class="card-body">

    <% if @student.errors %>
      <ul>
        <% @student.errors.full_messages.each do |message| %>
          <li><span class="form-text text-danger"><%= message %></span></li>
        <% end %>
      </ul>
    <% end %>

    <% if @error_messages %>
      <ul>
      <% @error_messages.each do |error_message| %>
          <li><span class="form-text text-danger"><%= error_message %></span></li>
      <% end %>
      </ul>
    <% end %>
    <%= form_tag("/student/password_update/#{@student.id}") do %>

      <div>
        <label>現在のパスワード
          <span class="text-danger">*</span>
        </label>
        <input type="password" class="form-control" name="password">
      </div>
      <div>
        <label>新しいパスワード
          <span class="text-danger">*</span>
        </label>
        <input type="password" class="form-control" name="new_password">
      </div>
      <div class="form-group">
        <label>新しいパスワード確認の確認
          <span class="text-danger">*</span>
        </label>
        <input type="password" class="form-control" name="password_confirm">
      </div>
      <input type="submit" value="パスワード変更" class="btn btn btn-primary float-right">
    <% end %>
  </div>
</div>