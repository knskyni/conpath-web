<div class="card card-custom gutter-b">
  <div class="card-body">
    <%= form_tag("/account/student/create") do %>
        <div class="form-group">
          <label>学籍番号
            <span class="text-danger">*</span>
          </label>
          <input type="string" class="form-control" name="id" value="<%= @student.id %>">
        </div>
        <div class="form-group">
          <label>パスワード
            <span class="text-danger">*</span>
          </label>
          <input type="password" class="form-control" name="password" value="<%= @student.password %>">
        </div>
        <div class="form-group">
          <label>パスワード確認
            <span class="text-danger">*</span>
          </label>
          <input type="password" class="form-control" name="password_confirm">
        </div>
        <div class="form-group">
          <label>姓
            <span class="text-danger">*</span>
          </label>
          <input type="string" class="form-control" name="last_name" value="<%= @student.lastName%>">
          <label>名
            <span class="text-danger">*</span>
          </label>
          <input type="string" class="form-control" name="first_name" value="<%= @student.firstName%>">
        </div>
        <div class="form-group">
          <label>せい
            <span class="text-danger">*</span>
          </label>
          <input type="string" class="form-control" name="last_name_furigana" value="<%= @student.lastNameFurigana%>">
          <label>めい
            <span class="text-danger">*</span>
          </label>
          <input type="string" class="form-control" name="first_name_furigana" value="<%= @student.firstNameFurigana%>">
        </div>
        <div class="form-group">
          <label>email
            <span class="text-danger">*</span>
          </label>
          <input type="string" class="form-control" name="email" value="<%= @student.email%>">
        </div>
        <div class="form-group">
          <label>学年
            <span class="text-danger">*</span>
          </label>
          <input type="string" class="form-control" name="grade" value="<%= @student.grade %>">
        </div>
        <div class="form-group">
          <label>クラス
            <span class="text-danger">*</span>
          </label>
          <input type="string" class="form-control" name="class" value="<%= @student.classID %>">
        </div>
    <% end %>
</div>

